library(ggplot2)
set.seed(123)
n_trials <- 1000
sample_size <- 30
binom_means <- replicate(n_trials, mean(rbinom(sample_size, size = 10, prob = 0.5)))
poisson_means <- replicate(n_trials, mean(rpois(sample_size, lambda = 4)))
par(mfrow = c(2,2))
hist(binom_means, probability=TRUE, col="skyblue", main="CLT -Binomial Status Means", xlab="Sample Mean")
curve(dnorm(x, mean = mean(binom_means), sd=sd(binom_means)), add = TRUE, col="red",lwd=2)
hist(poisson_means, probability=TRUE, col="lightgreen", main="CLT -Poisson Sample Means", xlab = "Sample Mean")
curve(dnorm(x, mean=mean(poisson_means), sd=sd(poisson_means)), add = TRUE, col="blue", lwd=2)
qqnorm(binom_means, main = "Q-Q Plot: Binomal Sample Means")
qqline(binom_means, col="red")
qqnorm(poisson_means, main="Q-Q Plot Poisson Sample Means")
qqline(poisson_means, col="blue")
